pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/rodkawaura/node-js-playwright-browserstack.git'
            }
        }
        stage('Build') {
            steps {
                sh 'npm i'
            }
        }
        stage('Test') {
            steps {
                sh 'npx playwright test'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying...'
            }
        }
    }
}
